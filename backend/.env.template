# Database Configuration
# Choose one of the following options:

# Option 1: MongoDB Memory Server (for development/testing)
MONGODB_URI=memory

# Option 2: Local MongoDB
# MONGODB_URI=mongodb://localhost:27017/library-management

# Option 3: MongoDB Atlas (cloud database)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/library-management?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration
CLIENT_URL=http://localhost:3000

# Bcrypt Configuration
BCRYPT_ROUNDS=12

# Database Seeding (set to true to seed data on startup)
SEED_DATA=true
